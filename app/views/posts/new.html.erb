<div class="container mt-5">
  <div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
      <h4 class="mb-0">📝 New Post in <%= @organization.name %></h4>
    </div>
    <div class="card-body">
      <%= form_with model: [@organization, @post], local: true do |f| %>
        <div class="mb-3">
          <%= f.label :title, class: "form-label fw-semibold" %>
          <%= f.text_field :title, class: "form-control", placeholder: "Enter title" %>
        </div>

        <div class="mb-3">
          <%= f.label :content, class: "form-label fw-semibold" %>
          <%= f.text_area :content, rows: 5, class: "form-control", placeholder: "Write your post content..." %>
        </div>

        <div class="mb-3">
          <%= f.label :min_age_required, "Minimum Age Required", class: "form-label fw-semibold" %>
          <%= f.number_field :min_age_required, class: "form-control", placeholder: "e.g., 10" %>
        </div>

        <div class="text-end">
          <%= f.submit "Create Post", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
