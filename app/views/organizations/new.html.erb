<div class="container mt-5">
  <h2 class="mb-4 text-primary text-center">üè¢ Create Organization</h2>

  <% if @organization.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(@organization.errors.count, "error") %> prohibited this organization from being saved:</h5>
      <ul>
        <% @organization.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @organization, local: true, html: { class: "needs-validation" } do |f| %>
    <div class="mb-3">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :description, class: "form-label" %>
      <%= f.text_area :description, rows: 3, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :min_age_required, "Minimum Age Required", class: "form-label" %>
      <%= f.number_field :min_age_required, class: "form-control", required: true, min: 0 %>
    </div>

    <div class="d-grid gap-2 col-6 mx-auto">
      <%= f.submit "Create Organization", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
