<div class="container mt-5">
  <h1 class="h3 fw-bold mb-4">ğŸ“Š Analytics for "<%= @organization.name %>"</h1>

  <div class="card mb-4 shadow-sm">
    <div class="card-body">
      <h5 class="card-title">ğŸ§¾ Organization Details</h5>
      <p><strong>Description:</strong> <%= @organization.description %></p>
      <p><strong>Minimum Age Required:</strong> <%= @organization.min_age_required %></p>
      <p><strong>Created:</strong> <%= time_ago_in_words(@organization.created_at) %> ago</p>
    </div>
  </div>

  <div class="card mb-4 shadow-sm">
    <div class="card-body">
      <h5 class="card-title">ğŸ‘¥ Verified Followers (<%= @verified_subscribers.count %>)</h5>
      <% if @verified_subscribers.any? %>
        <ul class="list-group">
          <% @verified_subscribers.each do |user| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= user.name.presence || user.email %>
              <span class="badge bg-primary"><%= user.date_of_birth %></span>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-muted">No verified followers yet.</p>
      <% end %>
    </div>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <h5 class="card-title">ğŸ“ Posts</h5>
      <% if @posts.any? %>
        <table class="table table-bordered table-striped mt-3">
          <thead>
            <tr>
              <th>Title</th>
              <th>Min Age</th>
              <th>Created</th>
              <th>Content</th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td><%= post.title %></td>
                <td><%= post.min_age_required %></td>
                <td><%= time_ago_in_words(post.created_at) %> ago</td>
                <td><%= truncate(post.content, length: 80) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p class="text-muted">No posts created yet.</p>
      <% end %>
    </div>
  </div>
</div>
